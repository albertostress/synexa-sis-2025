# Development mode in production - guaranteed to work
FROM node:18-alpine

RUN apk add --no-cache curl postgresql-client

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install ALL dependencies
RUN npm install

# Copy the rest
COPY . .

# Generate Prisma
RUN npx prisma generate

# Try to build, but don't fail if it doesn't work
RUN npm run build || echo "Build failed, will use dev mode"

EXPOSE 3000

# Start with fallback - try production first, then development
CMD sh -c "if [ -f dist/main.js ]; then node dist/main.js; else npm run start; fi"