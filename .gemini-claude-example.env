# ============================================================================
# Gemini-Claude Workflow Configuration Example
# ============================================================================
# Copy this file to .gemini-claude/config.env and customize as needed

# Gemini CLI Configuration
GEMINI_MODEL=gemini-pro                 # Gemini model to use
MAX_TOKENS=8192                         # Maximum tokens per request
TEMPERATURE=0.1                         # Temperature for generation (0.0-1.0)

# Workflow Configuration
INTERACTIVE_MODE=true                   # Enable interactive task selection
DRY_RUN=false                          # Preview commands without execution
AUTO_COMMIT=false                      # Auto-commit successful changes

# Cache and Performance
CACHE_TTL=3600                         # Cache time-to-live in seconds (1 hour)

# Advanced Options
CLAUDE_CODE_ARGS=""                    # Additional args for claude-code commands
LOG_LEVEL=INFO                         # Logging level: DEBUG, INFO, WARN, ERROR
MAX_CONCURRENT_TASKS=1                 # Max parallel task execution
BACKUP_BEFORE_CHANGES=true             # Create git stash before major changes

# Project-specific settings
EXCLUDED_PATHS="node_modules,dist,build,.git,.gemini-claude"  # Paths to ignore
FILE_EXTENSIONS="js,jsx,ts,tsx,py,java,go,rs"                # Relevant file types
MAX_FILE_SIZE=1048576                                         # Max file size (1MB)

# Integration settings
SLACK_WEBHOOK=""                       # Optional Slack notifications
DISCORD_WEBHOOK=""                     # Optional Discord notifications
EMAIL_NOTIFICATIONS=false              # Email completion notifications