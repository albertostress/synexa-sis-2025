# ===================================
# DOKPLOY ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env.dokploy and update with your values

# Domain Configuration
FRONTEND_DOMAIN=escola.example.com
BACKEND_DOMAIN=api.escola.example.com

# Database Configuration
DB_USER=escola_user
DB_PASSWORD=your_secure_password_here
DB_NAME=escola_db

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_here_minimum_32_chars

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@escola.example.com

# Redis Configuration (optional - uses defaults)
REDIS_PASSWORD=

# Backup Configuration (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info